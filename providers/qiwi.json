{
    "name": "Qiwi",
    "version": 20150432,
    "elements": [
        {
            "name": "login",
            "type": "text",
            "description": "Phone"
        },
        {
            "name": "password",
            "type": "password",
            "description": "Password"
        }
    ],
    "forms": [
        {
            "hosts": ["qiwi.com"],
            "urls": ["^\/.*"],
            "elements": [
                {
                    "name": "login",
                    "query": "#phone"
                },
                {
                    "name": "password",
                    "query": "#header-block form input[name=password]"
                }
            ],
            "submit": "#header-block form button[type=submit]"
        },
        {
            "hosts": ["visa.qiwi.com", "w.qiwi.com"],
            "urls": ["^\/.*"],
            "activators" : ["div.signin button.signinBtn"],
            "activatorTimeout" : "2000",
            "elements": [
                {
                    "name": "login",
                    "query": "#phone"
                },
                {
                    "name": "password",
                    "query": "form.loginWithCaptcha input[name=password]"
                }
            ],
            "submit": "form.loginWithCaptcha button[value=submit]"
        }
    ]
}